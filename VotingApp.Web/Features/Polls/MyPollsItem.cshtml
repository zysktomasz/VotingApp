@model VotingApp.Web.Features.Polls.MyPollsItemViewModel

<div class="jumbotron">
    <h2 class="display-4">@Model.Question</h2>

    <div class="row">
        <div class="col-lg-7">
            <ul class="list-group list-group-flush">
                @foreach (var answer in Model.Answers)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @answer.Description
                    <span class="badge badge-primary badge-pill">@answer.Votes</span>
            </li>
            }
            </ul>
        </div>
        <div class="col-lg-5">
            <a asp-controller="Polls" asp-action="Vote" asp-route-pollid="@Model.Id" class="btn btn-secondary btn-block">Go to Voting</a>
            <button type="button" class="btn btn-info btn-block" style="margin-bottom: 10px;">Get summary in .PDF</button>
            <form asp-controller="Polls" asp-action="DeletePoll"
                  asp-route-pollId="@Model.Id" method="post">
                <button type="submit" class="btn btn-danger btn-block">Delete (permanent)</button>
            </form>
        </div>
    </div>
</div>